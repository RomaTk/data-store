{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "moduleResolution": "node",
        "module": "ESNext",
        "esModuleInterop": true,
        "typeRoots": ["node_modules/@types"],
        "declaration": true,
        "outDir": "./lib",
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "test", ".vscode", ".github"]
}
